{
  "manifest_version": 3,
  "name": "Magnetly AI",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://app.magnetlyai.com/*"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/logo.gif"
      ],
      "matches": [
        "https://*.linkedin.com/*"
      ]
    }
  ]
}